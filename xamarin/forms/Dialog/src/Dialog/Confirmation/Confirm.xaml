<?xml version="1.0" encoding="utf-8"?>

<popup:PopupPageBase x:TypeArguments="dialog:ConfirmViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:popup="https://schemas.rocketsurgeonsguild.com/xaml/airframe/popup"
                     xmlns:dialog="clr-namespace:Dialog;assembly=Dialog"
                     x:Class="Dialog.ConfirmPopup"
                     BackgroundColor="Transparent"
                     BackgroundInputTransparent="True"
                     HasSystemPadding="False">
    <ContentPage.Content>
        <Grid Padding="120"
              BackgroundColor="Indigo">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label x:Name="Message" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Black"/>
            <Button x:Name="Confirm" Text="Confirm" Grid.Row="1" Grid.Column="0" BackgroundColor="Black" />
            <Button x:Name="Cancel" Text="Cancel" Grid.Row="1" Grid.Column="1" BackgroundColor="Black" />
        </Grid>
    </ContentPage.Content>
</popup:PopupPageBase>