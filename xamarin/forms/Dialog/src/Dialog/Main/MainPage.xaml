<?xml version="1.0" encoding="utf-8"?>
<airframe:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:airframe="https://schemas.rocketsurgeonsguild.com/xaml/airframe/forms"
                          xmlns:dialog="clr-namespace:Dialog.Main;assembly=Dialog"
                          x:Class="Dialog.Main.MainPage"
                          x:TypeArguments="dialog:MainViewModel">
    <StackLayout BackgroundColor="LightGray">

        <Label x:Name="Output"
               BackgroundColor="YellowGreen"
               TextColor="Black" />

        <Button
            x:Name="Interact"
            Text="Alert"
            BackgroundColor="Indigo"
            TextColor="Azure"
            VerticalOptions="CenterAndExpand" />
        
        <Button
            x:Name="Action"
            Text="Action"
            BackgroundColor="Crimson"
            TextColor="Azure"
            VerticalOptions="End"/>
    </StackLayout>
</airframe:ContentPageBase>